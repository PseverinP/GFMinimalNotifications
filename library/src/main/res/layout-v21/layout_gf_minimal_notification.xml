<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/notification_height"
    android:elevation="@dimen/notification_elevation"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="5dp"
    android:stateListAnimator="@anim/raise"
    android:weightSum="10">

    <com.gf.minimal.notifications.widget.CircleImageView
        android:id="@+id/notification_left_image"
        android:layout_width="0dp"
        android:layout_height="@dimen/notification_image_size"
        android:layout_weight="2"
        app:border_width="1dp" />

    <LinearLayout
        android:id="@+id/notification_text_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/notification_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/notification_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textSize="12sp" />

    </LinearLayout>

    <com.gf.minimal.notifications.widget.CircleImageView
        android:id="@+id/notification_right_image"
        android:layout_width="0dp"
        android:layout_height="@dimen/notification_image_size"
        android:layout_weight="2"
        android:visibility="gone"
        app:border_width="1dp" />

</LinearLayout>